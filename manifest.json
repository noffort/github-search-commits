{
  "manifest_version": 3,
  "name": "GitHub Search Improve",
  "description": "A extension to improve experience searching commits in GitHub",
  "version": "1.0",
  "permissions": [
    "https://github.com/*"
  ],
  "browser_action": {
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["github.com"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}
